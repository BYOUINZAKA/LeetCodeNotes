{
  "tasks": [
    {
      "type": "shell",
      "label": "g++.exe build active file",
      "command": "D:/MinGW/bin/g++.exe",
      "args": [
        "-g",
        "-Wall",
        "-std=c++17",
        "-lm",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "D:/MinGW/bin"
      }
    }
  ],
  "version": "2.0.0"
}
